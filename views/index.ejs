<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Home Page</title>
    <link rel="stylesheet" href="/styles/layout.css" type="text/css" />

    <script type="text/javascript" src="/vendor/jquery-3.0.0.js"></script>
    <script type="text/javascript" src="/scripts/app.js"></script>
    <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
      <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
  </head>

  <body>
    <nav class="navbar navbar-default navbar-fixed-top">
      <div class="container">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="navbar-brand" href="#">Decision Maker</a>
        </div>
        <div id="navbar" class="collapse navbar-collapse">
          <ul class="nav navbar-nav navbar-right">
            <li><a href="#"><span class="glyphicon glyphicon-plus" aria-hidden="true"></span> New Poll</a></li>
          </ul>
        </div><!--/.nav-collapse -->
      </div>
    </nav>
    <div class="container">
      <div class="page-header">
        <h1>Make Up Your Mind</h1>
      </div>
      <form action="/polls" method="post">
        <div class="form-group">
          <label for="question">What is your question?</label>
          <input type="text" class="form-control" id="question" placeholder="What should we do tonight?">
        </div>
        <div class="row">
          <div class="col-sm-4">
            <div class="well">
              <div class="form-group">
                <label for="option-title-1">Title</label>
                <input type="text" class="form-control" id="option-title-1" placeholder="Dance">
              </div>
              <div class="form-group">
                <label for="option-description-1">Description</label>
                <textarea class="form-control" rows="3" id="option-description-1" placeholder="Shake your tailfeathers!"></textarea>
              </div>
            </div><!-- /.well -->
          </div><!-- /.col -->
          <div class="col-sm-4">
            <div class="well">
              <div class="form-group">
                <label for="option-title-2">Title</label>
                <input type="text" class="form-control" id="option-title-2" placeholder="Attend the Theatre">
              </div>
              <div class="form-group">
                <label for="option-description-2">Description</label>
                <textarea class="form-control" rows="3" id="option-description-2" placeholder="Watch some thespians pretend"></textarea>
              </div>
            </div><!-- /.well -->
          </div><!-- /.col -->
          <div class="col-sm-4">
            <div class="well">
              <button class="btn btn-default"><span class="glyphicon glyphicon-plus" aria-hidden="true"></span></button>
            </div><!-- /.well -->
          </div><!-- /.col -->
        </div><!-- /.row -->
        <div class="form-group">
          <label for="email">Email address</label>
          <input type="email" class="form-control" id="email" placeholder="email@example.com">
        </div>
        <button type="submit" class="btn btn-default">Submit</button>
      </form>
    </div><!-- /.container -->
  </body>
</html>
